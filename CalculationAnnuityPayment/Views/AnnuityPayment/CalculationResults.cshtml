@model IEnumerable<CalculationAnnuityPayment.Models.ViewModel>

@{
    ViewData["Title"] = "Результат расчетов";
}

<h1>Результат расчетов</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.paymentNumber)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.paymentDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.balanceOfDebt)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.percentOnDebt)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.mainDebt)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.amountOfPayment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th scope="row">
                @Html.DisplayFor(modelItem => item.paymentNumber)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.paymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.balanceOfDebt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.percentOnDebt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mainDebt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amountOfPayment)
            </td>
        </tr>
}
    </tbody>
</table>
