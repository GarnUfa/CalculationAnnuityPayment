@model AnnuityPaymentModel

<form class="needs-validation" asp-controller="AnnuityPayment" asp-action="CreditData" method="post" novalidate>
    <div class="col p-0">
        <div class="col-md-5 mb-3">
            <label for="firstName">Сумма кредитования</label>
            <input type="text" class="form-control" asp-for="creditAmount" placeholder="от 10000 до 10000000" value="" required>
            <span asp-validation-for="creditAmount" class="text-danger"></span>
        </div>
        <div class="col-md-5 mb-3">
            <label for="lastName">Процентная ставка</label>
            <input type="text" class="form-control " asp-for="percentRate" placeholder="от 1 до 100" value="" required>
            <span asp-validation-for="percentRate" class="text-danger"></span>

        </div>
        @{
            //TODO: На сторону сервера проходит дробная валидация.
        }
        <div class="col-md-5 mb-3">
            <label for="lastName">Срок кредитования в месяцах</label>
            <input type="text" class="form-control " asp-for="creditPeriod" placeholder="от 6 до 600" value="" required>
            <span asp-validation-for="creditPeriod" class="text-danger"></span>

        </div>
    </div>
    <hr class="mx-1">
    <div class="col-md-5 mb-3">
        <button class="btn btn-primary " type="submit">Рассчитать</button>
    </div>
    
</form>
